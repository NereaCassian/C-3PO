{
  "name": "c-3po",
  "version": "1.0.0",
  "description": "A simple AI-powered translation browser extension",
  "private": true,
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:chrome",
    "build:chrome": "cross-env TARGET_BROWSER=chrome webpack --mode production",
    "build:firefox": "cross-env TARGET_BROWSER=firefox webpack --mode production",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "dev": "npm run dev:chrome",
    "dev:chrome": "cross-env TARGET_BROWSER=chrome webpack --mode development --watch",
    "dev:firefox": "cross-env TARGET_BROWSER=firefox webpack --mode development --watch",
    "clean": "rimraf dist *.zip",
    "changelog": "node scripts/generate-changelog.js",
    "changelog:version": "node scripts/generate-changelog.js",
    "version:patch": "node scripts/version-patch.js",
    "version:minor": "node scripts/version-minor.js",
    "version:major": "node scripts/version-major.js"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.454.0",
    "openai": "^4.67.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^10.0.0",
    "css-loader": "^6.8.1",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "chrome-extension",
    "translation",
    "ai",
    "gemini",
    "openai",
    "browser-extension",
    "typescript",
    "react"
  ],
  "author": "NereaCassian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NereaCassian/C-3PO.git"
  },
  "bugs": {
    "url": "https://github.com/NereaCassian/C-3PO/issues"
  },
  "homepage": "https://github.com/NereaCassian/C-3PO#readme"
}
